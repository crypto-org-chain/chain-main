#!/usr/bin/env bash

# see pre-requests:
# - https://grpc.io/docs/languages/go/quickstart/
# - also install gocosmos plugin by running: $ go get github.com/regen-network/cosmos-proto/protoc-gen-gocosmos

set -eo pipefail

proto_dirs=$(find ./proto -path -prune -o -name '*.proto' -print0 | xargs -0 -n1 dirname | sort | uniq)
echo "Generate protobuf files from ./proto to ./x"
for dir in $proto_dirs; do
  echo "processing "${dir}
# buf is enhanced protobuf generator
  buf protoc \
  -I "proto" \
  -I "third_party/cosmos-sdk/proto" \
  -I "third_party/cosmos-sdk/third_party/proto" \
  --gocosmos_out=plugins=interfacetype+grpc,\
Mgoogle/protobuf/any.proto=github.com/cosmos/cosmos-sdk/codec/types:. \
  $(find "${dir}" -maxdepth 1 -name '*.proto')

  # command to generate gRPC gateway (*.pb.gw.go in respective modules) files
  buf protoc \
  -I "proto" \
  -I "third_party/cosmos-sdk/proto" \
  -I "third_party/cosmos-sdk/third_party/proto" \
  --gocosmos_out=plugins=interfacetype+grpc,\
Mgoogle/protobuf/any.proto=github.com/cosmos/cosmos-sdk/codec/types:. \
  --grpc-gateway_out=logtostderr=true:. \
  $(find "${dir}" -maxdepth 1 -name '*.proto')
done

# move proto files to the right places
cp -r github.com/crypto-org-chain/chain-main/* ./
rm -rf github.com
